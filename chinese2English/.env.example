# Server settings
C2E_ASR_MODEL_ID=Qwen/Qwen3-ASR-0.6B
C2E_TRANSLATION_MODEL_ID=Qwen/Qwen3-1.7B
C2E_SERVER_HOST=0.0.0.0
C2E_SERVER_PORT=8000
C2E_LOG_LEVEL=INFO

# TTS settings â€” backend: piper / edge / cosyvoice / none
C2E_TTS_BACKEND=piper
C2E_PIPER_VOICE=en_US-lessac-medium
C2E_PIPER_DATA_DIR=
C2E_EDGE_TTS_VOICE=en-US-AriaNeural
C2E_COSYVOICE_MODEL_DIR=CosyVoice2-0.5B

# Client settings
C2E_CLIENT_SERVER_URL=ws://192.168.1.100:8000
C2E_CLIENT_SERVER_HTTP_URL=http://192.168.1.100:8000
C2E_CLIENT_AUDIO_DEVICE_INDEX=
C2E_CLIENT_MIN_SEGMENT_DURATION=0.5
C2E_CLIENT_MIN_SEGMENT_ENERGY=300
# Audio file saving (format: ogg / wav)
C2E_CLIENT_AUDIO_SAVE_ENABLED=true
C2E_CLIENT_AUDIO_SAVE_DIR=output/audio
C2E_CLIENT_AUDIO_SAVE_FORMAT=ogg

# Edge settings (standalone x86 CPU offline mode)
# ASR backend: sensevoice / breeze / breeze-int8 / qwen3
C2E_EDGE_ASR_BACKEND=sensevoice
C2E_EDGE_ASR_MODEL_PATH=models/sherpa-onnx-sense-voice-zh-en-ja-ko-yue-2024-07-17
# For Breeze-ASR-25:
#   C2E_EDGE_ASR_BACKEND=breeze          # FP32 (~6.2GB RAM)
#   C2E_EDGE_ASR_BACKEND=breeze-int8     # INT8 (~1.8GB RAM, recommended for CPU)
#   C2E_EDGE_ASR_MODEL_PATH=models/Breeze-ASR-25-onnx-250806
# For Qwen3-ASR (OpenVINO INT8, ~1.3GB RAM, pip install openvino):
#   C2E_EDGE_ASR_BACKEND=qwen3
#   C2E_EDGE_ASR_MODEL_PATH=models/Qwen3-ASR-0.6B-INT8-OpenVINO
C2E_EDGE_ASR_NUM_THREADS=4
C2E_EDGE_TRANSLATION_MODEL_PATH=models/Qwen3-1.7B-Q4_K_M.gguf
C2E_EDGE_TRANSLATION_NUM_THREADS=4
C2E_EDGE_TRANSLATION_CTX_SIZE=2048
C2E_EDGE_PIPER_VOICE=en_US-lessac-medium
C2E_EDGE_PIPER_DATA_DIR=models/piper
C2E_EDGE_PIPER_LENGTH_SCALE=1.0
C2E_EDGE_PIPER_NOISE_SCALE=0.667
C2E_EDGE_PIPER_NOISE_W=0.8
C2E_EDGE_AUDIO_DEVICE=
C2E_EDGE_VAD_ENERGY_THRESHOLD=500
C2E_EDGE_MIN_SEGMENT_DURATION=0.5
# SRT subtitle output
C2E_EDGE_SRT_ENABLED=true
C2E_EDGE_SRT_OUTPUT_DIR=output
# Speaker diarization (requires WeSpeaker ONNX model in models/diarization/)
C2E_EDGE_DIARIZE_ENABLED=false
C2E_EDGE_DIARIZE_MODEL_PATH=models/diarization
C2E_EDGE_DIARIZE_NUM_SPEAKERS=
C2E_EDGE_DIARIZE_COSINE_THRESHOLD=0.38
# Audio file saving (format: ogg / wav)
C2E_EDGE_AUDIO_SAVE_ENABLED=true
C2E_EDGE_AUDIO_SAVE_DIR=output/audio
C2E_EDGE_AUDIO_SAVE_FORMAT=ogg
C2E_EDGE_LOG_LEVEL=INFO
