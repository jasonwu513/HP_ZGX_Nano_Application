# =============================================================================
# HP ZGX Nano 專用環境配置
# 128GB 統一記憶體 / 1000 TOPS / NVIDIA GPU
# =============================================================================

# --- Server 核心設定 ---
C2E_ASR_MODEL_ID=Qwen/Qwen3-ASR-0.6B
C2E_TRANSLATION_MODEL_ID=Qwen/Qwen3-30B
C2E_SERVER_HOST=0.0.0.0
C2E_SERVER_PORT=8000
C2E_LOG_LEVEL=INFO
C2E_PIPELINE_TIMEOUT=120

# --- TTS 設定 ---
# ZGX Nano 使用 CosyVoice2 GPU 加速
C2E_TTS_BACKEND=cosyvoice
C2E_COSYVOICE_MODEL_DIR=models/CosyVoice2-0.5B
C2E_COSYVOICE_SPEAKER=default

# Piper 備用（CPU）
C2E_PIPER_VOICE=en_US-lessac-medium
C2E_PIPER_DATA_DIR=models/piper

# edge-tts 備用（雲端）
C2E_EDGE_TTS_VOICE=en-US-AriaNeural

# --- Client 設定（樹莓派連線） ---
C2E_CLIENT_SERVER_URL=ws://zgx-nano.local:8000
C2E_CLIENT_SERVER_HTTP_URL=http://zgx-nano.local:8000
C2E_CLIENT_AUDIO_DEVICE_INDEX=
C2E_CLIENT_MIN_SEGMENT_DURATION=0.5
C2E_CLIENT_MIN_SEGMENT_ENERGY=300
C2E_CLIENT_AUDIO_SAVE_ENABLED=true
C2E_CLIENT_AUDIO_SAVE_DIR=output/audio
C2E_CLIENT_AUDIO_SAVE_FORMAT=ogg
